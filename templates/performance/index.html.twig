{% extends 'base.html.twig' %}

{% block title %}
	{{ performance.name }}
{% endblock %}

{% block body %}
	<div class="container mx-auto mt-5">
		<div class="row align-items-center">
			<div class="col-6">
				<p class="h2">{{ performance.name }}</p>
				<div class="mt-3">
					<p>{{ performance.description }}</p>
				</div>
				<div class="row mt-3 h5">
					<p class="col-2">Budget:</p>
					<p class="col-2">{{ performance.budget|format_currency('EUR') }}</p>
				</div>
				<div class="mt-4">
					<p class="display-3">
						<ul class="list-group d-flex flex-row gap-3  justify-content-between">
							{% for role in performance.performanceRoles %}
								<li class="list-unstyled bg-light p-3 rounded-circle">{{ role.role.name }}</li>
							{% endfor %}
						</ul>
					</p>
				</div>
			</div>
			<div class="col-6">
				<img src="{{ performance.imageUrl }}" alt="" class="img-fluid"/>
			</div>
		</div>
	</div>
{% endblock %}
