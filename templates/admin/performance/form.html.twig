{% extends 'base.html.twig' %}

{% block title %}Hello AdminPerformanceController!
{% endblock %}

{% block body %}
	<div class="container mx-auto mt-5">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		{{ form_start(form) }}
		<div class="form-group">
			{{ form_label(form.name) }}
			{{ form_widget(form.name) }}
			<small id="emailHelp" class="text-red">{{ form_errors(form.name) }}</small>
		</div>

		<div class="form-group mt-4">
			{{ form_label(form.budget) }}
			{{ form_widget(form.budget) }}
			<small id="emailHelp" class="text-red">{{ form_errors(form.budget) }}</small>
		</div>

		<div class="form-group mt-4">
			{{ form_label(form.imageUrl) }}
			{{ form_widget(form.imageUrl) }}
			<small id="emailHelp" class="text-red">{{ form_errors(form.imageUrl) }}</small>
		</div>

		<div class="form-group mt-4">
			{{ form_label(form.description) }}
			{{ form_widget(form.description) }}
			<small id="emailHelp" class="text-red">{{ form_errors(form.description) }}</small>
		</div>

		<div class="form-group mt-4">
			{{ form_widget(form.save) }}
		</div>
		{{ form_end(form) }}
		<div class="mt-3">
			<p>
				<a href="{{ path('app_admin_actor') }}">
					 back to list</a>
			</p>
		</div>
			{% endblock %}
		
